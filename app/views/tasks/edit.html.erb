<h1>Edit a task</h1>

<% if @task.present? %>
  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :details %>
    <%= f.text_area :details %>

    <%= f.label :completed %>
    <%= f.check_box :completed %>

    <%= f.submit %>
  <% end %>
<% end %>
<p><%= link_to "Back to Tasks List", tasks_path %></p>
